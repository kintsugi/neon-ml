{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["es2015", "dom"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "composite": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": "./src",
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
